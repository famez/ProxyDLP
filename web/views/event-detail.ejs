<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Event Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    
    .download-link {
      display: inline-block;
      padding: 8px 16px;
      font-size: 14px;
      font-weight: 500;
      color: #fff;
      background: linear-gradient(135deg, #6e8efb, #a777e3);
      border-radius: 25px;
      text-decoration: none;
      transition: all 0.25s ease-in-out;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .download-link:hover {
      background: linear-gradient(135deg, #a777e3, #6e8efb);
      transform: translateY(-2px);
    }

    .download-link::after {
      content: ' ↓';
      font-size: 12px;
    }

  </style>
</head>
<body class="bg-gray-50 p-8">
  <div class="max-w-3xl mx-auto bg-white rounded-lg shadow p-6">
    <h1 class="text-2xl font-bold text-indigo-700 mb-4">Event Details</h1>

    <div class="mb-4 text-sm text-gray-600">
      <span class="font-medium">Timestamp:</span> <%= event.timestamp.toISOString() %>
    </div>

    <div class="mb-4 text-sm text-gray-600">
      <span class="font-medium">User:</span> <%= event.user %>
    </div>

    <div class="mb-4 text-sm text-gray-600">
      <span class="font-medium">Site:</span> <%= event.site %>
    </div>

    <div class="mb-4 text-sm text-gray-600">
      <span class="font-medium">Rational:</span> <%= event.rational %>
    </div>
    <% if (event.content) { %>
      <div class="mb-4">
        <h2 class="text-sm font-semibold text-gray-600 mb-1">Content</h2>
        <p class="text-gray-700 whitespace-pre-wrap bg-gray-50 p-3 rounded border"><%= event.content %></p>
      </div>

    <% } %>

    <% if (event.rational === "Attached file" && event.filename) { %>
      <a href="<%= event.filepath %>?name=<%= event.filename %>" class="download-link" download>
        Download <%= event.filename %>
      </a>
    <% } %>

    <% if (event.leak) { %>
      <div class="mt-4 space-y-2">
        <% Object.entries(event.leak.regex || {}).forEach(([k, v]) => { %>
          <span class="inline-block px-2 py-1 bg-indigo-100 text-indigo-700 text-xs rounded-full"><%= k %>: <%= v %></span>
        <% }) %>
        <% Object.entries(event.leak.ner || {}).forEach(([k, v]) => { %>
          <span class="inline-block px-2 py-1 bg-yellow-100 text-yellow-700 text-xs rounded-full"><%= k %>: <%= v %></span>
        <% }) %>
        <% (event.leak.topic || []).forEach(t => { %>
          <span class="inline-block px-2 py-1 bg-green-100 text-green-700 text-xs rounded-full"><%= t %></span>
        <% }) %>
      </div>
      <div class="mt-6 flex items-center space-x-2">
        <button
          id="markSensitiveBtn"
          class="bg-red-500 hover:bg-red-600 text-white text-sm font-medium py-2 px-4 rounded-full shadow transition duration-200"
        >
          Mark content as sensitive
        </button>

        <!-- Tooltip icon with explanation -->
        <div class="relative group">
          <span
            class="inline-block bg-gray-300 text-white rounded-full w-5 h-5 text-center text-xs cursor-default"
            title="Click to mark this content for internal monitoring. It will be used to detect similar content using AI similarity matching."
          >
            ?
          </span>
        </div>
      </div>
    <% } %>

    <div class="mt-6">
      <a href="/explore" class="text-sm text-indigo-600 underline hover:text-indigo-800">← Back to activity</a>
    </div>
  </div>

  <script>
  document.getElementById("markSensitiveBtn").addEventListener("click", async () => {
    try {
      const response = await fetch("/mark-sensitive", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          event_id: "<%= event._id %>",
        })
      });

      if (response.ok) {
        alert("Content marked as sensitive.");
      } else {
        alert("Failed to mark content. Please try again.");
      }
    } catch (err) {
      console.error(err);
      alert("Error occurred. Please check console.");
    }
  });
</script>
</body>
</html>
