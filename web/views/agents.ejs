<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Installed Agents</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-8">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-bold text-center mb-4 text-indigo-700">Installed Agents</h1>

    <!-- Download Installer Button -->
    <div class="flex justify-center mb-8">
      <a href="/downloads/ProxyDLPAgentSetup.exe" 
         class="px-6 py-3 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 transition font-semibold">
        Download Agent Installer
      </a>
    </div>

    <div class="bg-white shadow-lg rounded-xl p-6">
      <h2 class="text-xl font-semibold mb-4">Active Agents</h2>

      <% if (agents && agents.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full border border-gray-200 rounded-lg overflow-hidden">
            <thead class="bg-indigo-600 text-white">
              <tr>
                <th class="px-4 py-2 text-left text-sm font-semibold">Computer</th>
                <th class="px-4 py-2 text-left text-sm font-semibold">OS</th>
                <th class="px-4 py-2 text-left text-sm font-semibold">User</th>
                <th class="px-4 py-2 text-left text-sm font-semibold">IP(s)</th>
                <th class="px-4 py-2 text-left text-sm font-semibold">Telemetry</th>
                <th class="px-4 py-2 text-left text-sm font-semibold">Version</th>
                <th class="px-4 py-2 text-left text-sm font-semibold">Last Seen</th>
                <th class="px-4 py-2 text-center text-sm font-semibold">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% agents.forEach(agent => { 
                  const lastSeen = new Date(agent.lastHeartbeat);
                  const now = new Date();
                  const diffMinutes = (now - lastSeen) / 1000 / 60;
                  const isOnline = diffMinutes <= 5;
              %>
                <tr class="hover:bg-indigo-50 transition">
                  <td class="px-4 py-2 text-sm font-medium text-gray-800"><%= agent.computer_name %></td>
                  <td class="px-4 py-2 text-sm text-gray-600"><%= agent.os_version %></td>
                  <td class="px-4 py-2 text-sm text-gray-600"><%= agent.user %></td>
                  <td class="px-4 py-2 text-sm text-gray-600"><%= agent.ip_addresses %></td>
                  <td class="px-4 py-2 text-sm text-gray-600">
                    <% if (agent.telemetry && Object.keys(agent.telemetry).length > 0) { %>
                      <ul class="list-disc list-inside">
                        <% Object.keys(agent.telemetry).forEach(hostname => { %>
                          <li>
                            <span class="font-medium"><%= hostname %>:</span>
                            <%= agent.telemetry[hostname].join(", ") %>
                          </li>
                        <% }) %>
                      </ul>
                    <% } else { %>
                      <span class="italic text-gray-400">No data</span>
                    <% } %>
                  </td>
                  <td class="px-4 py-2 text-sm text-gray-600"><%= agent.agent_version %></td>
                  <td class="px-4 py-2 text-sm text-gray-600"><%= agent.lastHeartbeat %></td>
                  <td class="px-4 py-2 text-center">
                    <% if (isOnline) { %>
                      <span class="px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">Online</span>
                    <% } else { %>
                      <span class="px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">Offline</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-gray-600">No agents installed.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
