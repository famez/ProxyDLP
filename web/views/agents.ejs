<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Installed Agents</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-8">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-3xl font-bold text-center mb-4 text-indigo-700">Installed Agents</h1>

    <!-- Download Installer Button -->
    <div class="flex justify-center mb-8">
      <a href="/downloads/ProxyDLPAgentSetup.exe" 
         class="px-6 py-3 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 transition font-semibold">
        Download Agent Installer
      </a>
    </div>

    <div class="bg-white shadow-lg rounded-xl p-6">
      <h2 class="text-xl font-semibold mb-4">Active Agents</h2>

      <% if (agents && agents.length > 0) { %>
        <ul class="space-y-4 mb-6">
          <% agents.forEach(agent => { 
              const lastSeen = new Date(agent.lastHeartbeat);
              const now = new Date();
              const diffMinutes = (now - lastSeen) / 1000 / 60;
              const isOnline = diffMinutes <= 5;
          %>
            <li class="border rounded-lg p-4 bg-gray-50 hover:bg-indigo-50 transition">
              <div class="flex justify-between items-start">
                <div>
                  <div class="font-bold text-lg text-gray-800"><%= agent.computer_name %></div>
                  <div class="text-sm text-gray-600">IP: <%= agent.ip %></div>
                  <div class="text-sm text-gray-600">OS: <%= agent.os_version %></div>
                  <div class="text-sm text-gray-600">User: <%= agent.user %></div>
                  <div class="text-sm text-gray-600">IP addresses: <%= agent.ip_addresses %></div>
                  <div class="text-sm text-gray-600 mt-2">
                    <h3 class="font-semibold">Hosts and IP addresses:</h3>
                    <% if (agent.telemetry && Object.keys(agent.telemetry).length > 0) { %>
                      <ul class="ml-4 list-disc">
                        <% Object.keys(agent.telemetry).forEach(hostname => { %>
                          <li>
                            <span class="font-medium"><%= hostname %>:</span>
                            <%= agent.telemetry[hostname].join(", ") %>
                          </li>
                        <% }) %>
                      </ul>
                    <% } else { %>
                      <p>No telemetry data.</p>
                    <% } %>
                  </div>
                  <div class="text-sm text-gray-600">Version: <%= agent.agent_version %></div>
                  <div class="text-sm text-gray-600">Last Seen: <%= agent.lastHeartbeat %></div>
                  <div class="text-sm mt-1">
                    <% if (isOnline) { %>
                      <span class="px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">Online</span>
                    <% } else { %>
                      <span class="px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">Offline</span>
                    <% } %>
                  </div>
                </div>
              </div>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-gray-600">No agents installed.</p>
      <% } %>
