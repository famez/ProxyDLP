<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Installed Agents</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-8">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-3xl font-bold text-center mb-8 text-indigo-700">Installed Agents</h1>

    <div class="bg-white shadow-lg rounded-xl p-6">
      <h2 class="text-xl font-semibold mb-4">Active Agents</h2>

      <% if (agents && agents.length > 0) { %>
        <ul class="space-y-4 mb-6">
          <% agents.forEach(agent => { %>
            <li class="border rounded-lg p-4 bg-gray-50 hover:bg-indigo-50 transition">
              <div class="flex justify-between items-start">
                <div>
                  <div class="font-bold text-lg text-gray-800"><%= agent.hostname %></div>
                  <div class="text-sm text-gray-600">OS: <%= agent.os %></div>
                  <div class="text-sm text-gray-600">Version: <%= agent.version %></div>
                  <div class="text-sm text-gray-600">Last Seen: <%= agent.last_seen %></div>
                  <div class="text-sm mt-1">
                    <% if (agent.status === 'online') { %>
                      <span class="px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">Online</span>
                    <% } else { %>
                      <span class="px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">Offline</span>
                    <% } %>
                  </div>
                </div>

                <div class="flex gap-2">
                  <form action="/agents/uninstall/<%= agent._id %>" method="POST">
                    <button class="text-red-600 hover:underline text-sm" onclick="return confirm('Uninstall this agent?')">Uninstall</button>
                  </form>
                  <form action="/agents/restart/<%= agent._id %>" method="POST">
                    <button class="text-yellow-600 hover:underline text-sm">Restart</button>
                  </form>
                  <form action="/agents/update/<%= agent._id %>" method="POST">
                    <button class="text-blue-600 hover:underline text-sm">Update</button>
                  </form>
                </div>
              </div>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-gray-600">No agents installed.</p>
      <% } %>

