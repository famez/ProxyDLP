<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <div class="max-w-6xl mx-auto py-10 px-4">
    <h1 class="text-3xl font-bold text-indigo-700 mb-6">Files: <%= group %></h1>
    <a href="/files" class="text-indigo-500 hover:underline mb-6 inline-block">‚Üê Back to Dashboard</a>

    <% if (events && events.length > 0) { %>
      <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        <% events.forEach(event => { %>
          <div class="bg-white shadow rounded-lg p-4 hover:shadow-md transition flex flex-col">
            <!-- Filename -->
            <h2 class="text-sm font-bold text-gray-800 truncate"><%= event.filename %></h2>

            <!-- Metadata -->
            <p class="text-xs text-gray-600">User: <%= event.user %></p>
            <p class="text-xs text-gray-600">Site: <%= event.site %></p>
            <p class="text-xs text-gray-600">IP: <%= event.source_ip %></p>
            <time class="text-xs text-gray-400 mt-1" data-utc="<%= event.timestamp %>">
              <%= event.timestamp %>
            </time>

            <!-- Download button -->
            <a href="<%= event.filepath %>?name=<%= event.filename %>"
               class="mt-3 inline-block text-center px-3 py-1 rounded bg-indigo-500 text-white text-xs hover:bg-indigo-600 transition"
               download>
              Download
            </a>

            <!-- Keywords -->
            <% if (event.tfidf_top_words && event.tfidf_top_words.length > 0) { %>
              <div class="mt-2 flex flex-wrap gap-1">
                <% event.tfidf_top_words.slice(0,3).forEach(wordObj => { %>
                  <span class="px-2 py-0.5 rounded-full text-xs bg-blue-100 text-blue-800">
                    <%= wordObj.word %>
                  </span>
                <% }) %>
              </div>
            <% } %>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-gray-600">No files in this group</p>
    <% } %>
  </div>
</body>
</html>
