<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Monitored Sites Dashboard</title>
  <link rel="stylesheet" href="/css/tailwind.css" />
  <!-- Simple script for Edit/Delete (calls backend via fetch API) -->
  <script>
    function deleteUrl(id) {
      if (!confirm("Are you sure you want to delete this URL?")) return;

      fetch('/site-urls/' + id, { method: 'DELETE' })
        .then(res => {
          if (res.ok) location.reload();
          else alert('Failed to delete');
        });
    }

    function editUrl(id, currentUrl) {
      const newUrl = prompt("Edit URL:", currentUrl);
      if (newUrl && newUrl !== currentUrl) {
        fetch('/site-urls/' + id, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ url: newUrl })
        }).then(res => {
          if (res.ok) location.reload();
          else alert('Failed to update');
        });
      }
    }
  </script>
</head>
<body class="bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100 min-h-screen flex items-center justify-center p-6">
  <main class="w-full max-w-6xl bg-white p-8 rounded-2xl shadow-xl">
    <h1 class="text-4xl font-bold text-indigo-700 mb-10 text-center">Monitored Sites</h1>

      <!-- New Downloadable Sites List -->
      <div class="mb-10">
        <h2 class="text-2xl font-semibold text-indigo-600 mb-4">New Sites Available for Download</h2>

        <div class="space-y-2">
          <% new_site_urls.forEach((urlDoc) => { %>
            <div class="flex items-center justify-between bg-indigo-50 px-4 py-2 rounded-lg shadow-sm">
              <a href="<%= urlDoc.url %>" class="text-indigo-700 font-medium truncate" target="_blank" rel="noopener">
                <%= urlDoc.url %>
              </a>
              <div class="space-x-2">
                <button onclick="editUrl('<%= urlDoc._id %>', '<%= urlDoc.url %>')" class="text-sm text-blue-600 hover:underline">Edit</button>
                <button onclick="deleteUrl('<%= urlDoc._id %>')" class="text-sm text-red-600 hover:underline">Delete</button>
              </div>
            </div>
          <% }) %>
        </div>

        <!-- Add new URL form -->
        <form id="add-url-form" class="mt-6 flex gap-2" method="POST" action="/site-urls">
          <input name="url" type="url" placeholder="https://example.com" required class="flex-1 px-4 py-2 border border-indigo-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400">
          <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition">Add URL</button>
        </form>
      </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr class="bg-indigo-50">
            <th class="px-6 py-3 text-left text-sm font-semibold text-indigo-700 uppercase tracking-wider">Site</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-indigo-700 uppercase tracking-wider">Watched URLs</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-100">

          <% site_docs.forEach(site => { %>
            <tr class="hover:bg-indigo-50 transition">
              <td class="px-6 py-4 flex items-center gap-3 text-indigo-700 font-medium">
                <!-- Globe icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m0 14v1m8-8h1M4 12H3m15.364-6.364l.707.707M6.343 17.657l-.707.707m0-12.728l.707-.707M17.657 17.657l.707.707M12 8a4 4 0 100 8 4 4 0 000-8z" />
                </svg>
                <%= site.name %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-700 space-y-1">
                <% site.urls.forEach(url => { %>
                  <div><%= url %></div>
                <% }) %>
              </td>
            </tr>
          <% }) %>

        </tbody>
      </table>
    </div>
  </main>
</body>
</html>
